---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Astro -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />

    <!-- Fonts -->
    <link rel="stylesheet" href="https://use.typekit.net/zgg7qni.css" />

    <!-- SEO -->
    <title>{title}</title>
    <meta
      name="description"
      content="Welcome to uwucrew: immerse yourself into the future of anime art!"
    />

    <!-- Socials -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@uwucrewnft" />
    <meta name="twitter:title" content="uwucrew: immerse yourself into the future of anime art! âœ¨" />
    <meta name="twitter:image" content="https://uwucrew-v2.web.app/og-image.jpg" />
    <meta property="og:image" content="https://uwucrew-v2.web.app/og-image.jpg" />
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --main: #1c1f22;
    --bg: #f4f5f6;
    --sub: #545357;
    --primary: #f2a7c8;
  }

  * {
    font-family: "como", sans-serif;
    color: var(--main);
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    font-size: 10px;
    text-transform: lowercase;
  }
  button {
    background: none;
    border: none;
    outline: none;
  }

  input {
    border: none;
    outline: none;
  }

  a {
    text-decoration: none;
  }
</style>
